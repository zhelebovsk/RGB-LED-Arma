void boom(){
    for (int j = 0; j < 10; j = j + 1){
            dimmer.setPower(99);
            delay(60);
            dimmer.setPower(20);
            delay(60);
            }
        }


void bumpum(){
            dimmer.setPower(99);
            delay(500);
            dimmer.setPower(14);
            delay(500);
        }


void taptap(){
    for (int j = 0; j < 11; j = j + 1){
        int x = 1;
        for (int i = 15; i > 14; i = i + x){
            dimmer.setPower(i - j*8);
            if (i == 49) x = -1;
            delay(1);
            //delay(20 - 2 * j);
            }
        }
    
    }



 void tomean(){
    for (int j = 0; j < 100; j = j + 1){
        int x = 1;
        for (int i = 1; i > j-1; i = i + x){
            dimmer.setPower(i);
            if (i > 100 - j - 1) x = -1;
            delay(3);
            }
        }
    }


void lightdark(){
    dimmer.setPower(99);
    delay(2000);
    dimmer.setPower(15);
    delay(2000);
    dimmer.setPower(99);
    delay(2000);
    dimmer.setPower(15);
    delay(2000);
    dimmer.setPower(99);
    delay(2000);
    dimmer.setPower(15);
    delay(2000);
    }

void light(){
    dimmer.setPower(99);
    delay(2000);
}
